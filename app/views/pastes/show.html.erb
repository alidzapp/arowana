<div class="page-one">
  <%= render "list" %>
</div>

<div class="page-two">
  <h1>
    <%= @paste.name %>
    <div class="pull-right">
      <%= link_to "Edit", edit_paste_path(@paste), class: "btn btn-default" %>
    </div>
  </h1>
  <div class="paste-info">
    <span class="submitted-by subtitle">Submitted by: <%= @paste.user_email %></span>
    <span class="language subtitle">Language: <%= @paste.language %></span>
    <span class="expires-at subtitle">Expires: <%= @paste.expires_at.to_formatted_s(:short) unless @paste.expires_at.nil? %></span>
  </div>
  <pre class="paste-body">
    <%= @paste.body %>
  </pre>
  <h3>Comments</h3>
  <%= render partial: "comments/list", locals: { comments: @paste.comments } %>
  <%= render "comments/form" %>
</div>